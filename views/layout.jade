doctype 5
html
	head
		title= title
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description", content="lunchinator")
		meta(name="author", content="dojo")
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap-responsive.css')
	body
		div(class='navbar navbar-inverse navbar-fixed-top')
			div(class='navbar-inner')
				div(class='container')
					a(class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
						span(class='icon-bar')
						span(class='icon-bar')
						span(class='icon-bar')
					a(class='brand', href='/') Lunchinator
					div(class='nav-collapse collapse')
						ul(class='nav')
							li(class='active')
								a(href='#about') About
							li
								a(href='#contact') Contact
							li
								a(href='restaurants') Restaurants
							li
								a(href='user/checkin') CheckIn
						form(class='navbar-form pull-right')
							input(class='span2', type='text', placeholder='Email') 
							input(class='span2 spacer', type='password', placeholder='Password')  
							button(type='submit', class='btn spacer') Sign in
		block content
		script(src='/js/jquery-1.8.2.min.js')
		script(src='/js/underscore-min.js')
		script(src='/js/backbone-min.js')
