.userList
	table(class='table table-bordered')
		caption Registered Lunchinators
		thead
			tr
				th First
				th Last
				th Email
		tbody
			tr(ng-repeat='user in data.users', ng-click='edit($index)')
				td {{user.Name.First}}
				td {{user.Name.Last}}
				td {{user.Email}}
					
	a(class='btn btn-mini btn-primary', href='#userModal', role='button', data-toggle='modal' ) New

div(id='userModal', class='modal hide fade', tabindex='-1', role='dialog', aria-labelledby='userModalLabel', aria-hidden='true')
	.modal-header
		button(type='button', class='close', data-dismiss='modal', aria-hidden='true') Ã—
		h3(id='userModalLabel') Add User
	.modal-body
		form(id='form', method='post', action='')
			fieldset
				label(for='firstName') First
				input(type='text', name='firstName', id='firstName', ng-model='data.userToEdit.Name.First')
				label(for='lastName') Last
				input(type='text', name='lastName', id='lastName', ng-model='data.userToEdit.Name.Last')
				label(for='email') Email
				input(type='email', name='email', id='email', ng-model='data.userToEdit.Email')
	.modal-footer
		button(class='btn', data-dismiss='modal', aria-hidden='true') Close
		button(class='btn btn-primary') Save