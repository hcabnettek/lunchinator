extends layout

block content
	div(class='container')
		p Current list of restaurants
		ul(class='unstyled')
			each item in restaurants
				li #{item.Name}
					span=item.Address
		
		form(id='form', method='post', action='/restaurants', class='form-horizontal')
			fieldset
				legend Add a restaurant
				div(class='control-group')
					label(class='control-label', for='name') Name
					div(class='controls')
						input(type='text', name='name', id='name')
				div(class='control-group')
					label(class='control-label', for='adrress') Address
					div(class='controls')
						input(type='text', name='address', id='address')
				button(type='submit', class='btn') Add Restaurant
block scripts
		script(src='/js/app/modules/restaurant.js')