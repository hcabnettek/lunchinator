extends layout

block content
	h1= title
	div(class='container')
		p Current list of restaurants
		ul
			each item in restaurants
				li #{item.Name}
					span=item.Address
		
		form(id='form', method='post', action='/restaurants')
			fieldset
				label(for='name') Name
				input(type='text', name='name', id='name')
				label(for='adrress') Address
				input(type='text', name='address', id='address')
				input(type='submit', value='Add Restaurant')