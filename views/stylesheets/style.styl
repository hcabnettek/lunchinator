body
	padding-top 60px
	padding-bottom 40px

.navbar-form
	.spacer
		margin-left 3px

border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

.userList
	max-width 900px
	margin 0 auto
	caption
		text-align left
		font-size 1.4em
		margin 0 3px 10px
		padding 0 0 6px
		border-bottom 1px inset #a9a9a9
	thead tr:first-child th
		width 30%
	&:last-child a
		float right

.restaurants
	width 300px
	
.restaurant
	border-radius 6px
	background-color #faf0f0
	border 1px outset honeydew
	padding 5px
	margin 4px 0

.restaurant
	.name
		font-weight bold
	.address, .url
		font-size .7em

